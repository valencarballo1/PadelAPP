    <script>
        let usuarioId;
        let esAdmin = false;
        usuarioId = getCookieValue("UsuarioSesion")

        function enEspera(modo = "on", titulo = "Procesando...", texto = "Aguarde un instante") {
            if (modo == "on") {
                Swal.fire({
                    title: titulo,
                    html: texto,
                    allowOutsideClick: false,
                    showCancelButton: false,
                    showConfirmButton: false,
                    showDenyButton: false
                });
                Swal.showLoading();
            } else {
                Swal.close();
            }
        }

        function modalAwait(modo = "show") {

            if (modo == "show") {

                $("#espera_contenedor").css("top", window.scrollY)

                $("#espera_contenedor").css("visibility", "visible")

            } else {

                $("#espera_contenedor").css("visibility", "hidden")

            }

        }

        $(document).ready(function () {
            checkUserSession();
        });

        function checkUserSession() {
            enEspera();
            $.ajax({
                url: "@Url.Action("ValidarSesion", "Usuario")",
                type: 'GET',
                success: function (response) {
                    enEspera("chau");
                    if (response.estaActivo) {
                        $('#usuarioNombre').text(response.usuarioNombre);
                        $('#usuarioImg').css('background-image', 'url(' + response.usuarioImg + ')');
                        $('#usuarioImg').removeClass('hidden');
                        $('#liPerfil').removeClass('hidden');
                        $('#btnInicioSesion').addClass('hidden');
                        $('#notificacion').removeClass('hidden');
                        $('#miPerfilPaginas').removeClass('hidden');
                        $('#menuUserMiniatura').removeClass('hidden');
                        llenarNotificaciones();
                        if (response.esAdmin) {
                            $('#reservasAdmin').removeClass('hidden');
                            $('#panelAdmin').removeClass('hidden');
                        }

                    } else {
                        enEspera("chau");
                        $('#usuarioImg').addClass('hidden');
                    }
                },
                error: function () {
                    enEspera("chau");
                    console.error('Error al verificar la sesión del usuario.');
                }
            });
        }

        function getCookieValue(cookieName) {
            var name = cookieName + "=";
            var decodedCookie = decodeURIComponent(document.cookie);
            var cookieArray = decodedCookie.split(';');

            for (var i = 0; i < cookieArray.length; i++) {
                var cookie = cookieArray[i].trim();
                if (cookie.indexOf(name) === 0) {
                    var cookieValue = cookie.substring(name.length, cookie.length);
                    var keyValueArray = cookieValue.split('=');

                    if (keyValueArray.length > 1) {
                        return keyValueArray[1];
                    }
                }
            }
            return null;
        }

        function obtenerUsuarioId() {
            console.log("retorno llamada " + usuarioId);
            return usuarioId;
        }

        $('#alertDropdownIcon').click(function (event) {
            event.preventDefault();
            $('#notificacion .dropdown-menu').toggleClass('show');

            $.ajax({
                url: "@Url.Action("LeerNotifiaciones", "Notificacion")",
                type: 'GET',
                success: function (data) {
                    if (data == true) {
                        console.log("Notificaciones leidas");
                        $('#contadorNotificaciones').text('');

                    } else {
                        console.log("No existen notificaciones");
                    }
                },
                errror: function () {
                    console.log("Error server");
                }
            });
        });

        $(document).click(function (event) {
            var target = $(event.target);
            if (!target.closest('#notificacion').length && $('.dropdown-menu').hasClass('show')) {
                $('.dropdown-menu').removeClass('show');
            }
        });

       function llenarNotificaciones() {
     $.ajax({
         url: "@Url.Action("Notificaciones", "Notificacion")",
         type: 'GET',
         success: function (data) {
             console.log(data);
             if (data.length > 0) {
                 $('#contadorNotificaciones').text(data.length);
                 const notificacionesDiv = $('<div class="dropdown-menu dropdown-menu-right p-3" aria-labelledby="alertsDropdown"></div>');
                 let detalleNotificacion;
                 data.forEach(function (notificacion) {
                     let icono;
                     if (notificacion.TipoNotificacion === 1) {
                         let idPartido = notificacion.IdCanchaReservada;
                         let urlVerPartido = "@Url.Action("Ver", "Partido")?idPartido=" + idPartido;
                         console.log(urlVerPartido);
                         icono = '<i class="fa-solid fa-table-tennis-paddle-ball fa-lg" style="color: #63E6BE;"><circle cx="8" cy="8" r="8"/></i>';
                         detalleNotificacion = $('<a href="' + urlVerPartido + '" class="dropdown-item d-flex align-items-center" href="#"><div class="mr-3">' + icono + '</div><div>' + notificacion.Detalle + '</div></a>');
                     } else if (notificacion.TipoNotificacion === 2) {
                         icono = '<i class="fas fa-exclamation fa-lg" style="color: #74C0FC;"></i>';
                         detalleNotificacion = $('<div class="dropdown-item d-flex align-items-center" href="#"><div class="mr-3">' + icono + '</div><div>' + notificacion.Detalle + '</div></div>');
                     }
                     notificacionesDiv.append(detalleNotificacion);
                 });
                 $('#notificacion').append(notificacionesDiv);


             } else {

             }
         },
         error: function () {
             console.error('Error al verificar la sesión del usuario.');
         }

     });
}


