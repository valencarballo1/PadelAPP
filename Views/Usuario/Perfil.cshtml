
@{
    ViewBag.Title = "Perfil";
}

<style>
    .perfil-img {
        width: 150px; /* Ajusta según sea necesario */
        height: 150px; /* Ajusta según sea necesario */
        object-fit: cover;
        border-radius: 50%;
        border: 2px solid #fff; /* Ajusta según sea necesario */
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <!-- Establece el ancho deseado para la tarjeta -->
            <div class="card">
                <div class="card-body d-flex flex-column align-items-center">
                    <div class="col-md-12 d-flex justify-content-center m-2">
                        <img src="@Url.Content(Model.FotoPerfil)" class="perfil-img" alt="Foto de perfil">
                    </div>

                    <div class="col-md-12 d-flex justify-content-center">
                        @if (Model != null && Model.NombreUsuario != null)
                        {
                            <h2>@Model.NombreUsuario</h2>
                        }
                        else
                        {
                            <p>Usuario no disponible</p>
                        }
                    </div>

                    <div class="col-md-12 d-flex justify-content-center">
                        @if (Model != null && Model.Celular != null)
                        {
                            <div class="d-flex justify-content-center align-items-center">
                                <div class="col-auto m-2 h5">
                                    <label class="col-form-label">Número celular</label>
                                </div>
                                <div class="col-auto">
                                    @Model.Celular
                                </div>
                                <div class="col-auto m-2">
                                    <button class="btn btn-info"><i class="bi bi-pencil"></i></button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p>Celular no disponible</p>
                        }
                    </div>
                    <div class="col-md-12 d-flex justify-content-center align-items-center">
                        <div class="col-auto m-2 h5">
                            <label class="col-form-label">Categoria</label>
                        </div>
                        <div class="col-auto">
                            6TA - PTOS. 6.54
                        </div>
                    </div>

                    <div class="col-md-12 d-flex justify-content-center align-items-center">
                        <div class="col-auto m-2 h5">
                            <button class="btn btn-danger rounded-1" id="cerrarSesion">Cerrar Sesion</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-body row d-flex align-items-center">
                    <div class="card col-md-6">
                        <div class="card-header">
                            Mis reservas
                        </div>
                    </div>

                    <div class="card col-md-6">
                        <div class="card-header">
                            Mis ultimos partidos
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

<script>
    const cerrarSesion = document.getElementById('cerrarSesion');

    cerrarSesion.addEventListener('click', function () {
        $.ajax({
        url: '@Url.Action("CerrarSesion", "Usuario")',
        type: 'GET',
        data: { },
        success: function (response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Gracias por elegirnos!',
                    showConfirmButton: false,
                    timer: 1000
                }).then(function() {
                                // Redirigir a la vista Producto/VerTodos después de 5 segundos
                                window.location.href = '@Url.Action("Index", "Home")';
                            });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: response.message
                });
            }
        },
    });
    });
</script>
